{{!-- The profile section displays personalized user information and user activity --}}
<div id="profile" class="align-items-center row">
  <h1 class="mb-5 mt-2 col-12 text-center">Hello, {{firstname}}!</h1>

  <section class="user-info col-md-4 p-2">
    <div class="col-12 prof-pic text-center">
      <img src="{{profile_pic}}" alt="profile pic" class="profile-pic readme-prof" />
    </div>
    <div class="readme-view m-3 p-1">
      <h3 class="display-flex text-center usertext">README.md</h3>

      <p class="user-scroll">{{readme}}</p>
    </div>
    <div class="queries-made m-3 p-1">
      <h3 class="display-flex text-center usertext">Queries Made</h3>
      <div class="user-scroll">
        {{#each posts as |post|}}
        <div class="upost m-2 p-1">
          <p>{{content}}</p>
        </div>
        {{/each}}
      </div>
    </div>
  </section>

{{!--  The email section allows users to edit their profile information. --}}
  <section id="email" class="update-user col-md-4">

    <h3 class="display-flex text-center">Edit Profile</h3>
    <form class="form update-form text-center shadow-sm mb-3">
      <div class="form-group row my-4 align-items-center">
        <label for="email-update" class="col-4 text-end utext">Email:</label>
        <input class="uform-input col-6" type="text" id="email-update" />
        <div id="email-error"></div>
      </div>
      <div class="form-group row my-4 align-items-center">
        <label for="password-update" class="col-4 text-end utext">Password:</label>
        <input class="uform-input col-6" type="password" id="password-update" />
        <div id="pw-error"></div>
      </div>
      <div class="form-group row my-4 align-items-center">
        <label for="readme-update" class="col-4 text-end utext">README.md:</label>
        <textarea class="uform-input col-6" type="text" id="readme-update"></textarea>
      </div>
      <div class="form-group display-flex justify-center">
        <button class="btn btn-primary update-btn" type="submit" id="{{id}}">Commit</button>
      </div>
    </form>
    <div id="update-msg"></div>
  </section>
  
{{!-- The relations section displays the user's followers and users they are following. --}}
  <div class="row text-center relations col-md-4 p-3">
    <section id="follower-sect" class="col-xl-5 mx-1">
      <h3 class="display-flex justify-center usertext">Followers</h3>
      <div class="user-relations">
        {{#each followers as |user|}}
        <a href="/profile/{{id}}" class="followers m-3 p-1 row align-items-center">
          <img src="{{profile_pic}}" alt="profile-pic" class="profile-pic col-6" />
          <p class="col-6">{{username}}</p>
        </a>
        {{/each}}
      </div>
    </section>
    <section id="following-sect" class="col-xl-5 mx-1">
      <h3 class="display-flex justify-center usertext">Following</h3>
      <div class="user-relations">
        {{#each following as |user|}}
        <a href="/profile/{{id}}" class="followers m-3 p-1 row align-items-center">
          <img src="{{profile_pic}}" alt="profile-pic" class="profile-pic col-6" />
          <p class="col-6">{{username}}</p>
        </a>
        {{/each}}
      </div>
    </section>
  </div>
</div>

<script src="/js/update.js"></script>