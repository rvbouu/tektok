<h2 class="px-3 mb-5 col-12 text-center">Hello, {{firstname}}!</h2>

<section class="user-post col-3">
  <h3 class="display-flex justify-center">README.md</h3>
  <div class="post m-3 p-1">
    <img src="{{profile_pic}}" alt="profile pic" class="profile-pic" />
    <p>{{readme}}</p>
  </div>
  <h3 class="display-flex justify-center">Queries Made</h3>
  {{#each posts as |post|}}
  <div class="post m-3 p-1">
    <p>{{content}}</p>
  </div>
  {{/each}}
</section>
<section class="update-user col-3">
  <h3 class="display-flex justify-center">Edit Profile</h3>
  <form class="form update-form">
    <div class="form-group">
      <label for="email-update">Email:</label>
      <input class="form-input" type="text" id="email-update" />
      <div id="email-error"></div>
    </div>
    <div class="form-group">
      <label for="password-signup">Password:</label>
      <input class="form-input" type="password" id="password-update" />
      <div id="pw-error"></div>
    </div>
    <div class="form-group">
      <label for="readme-update">README.md:</label>
      <textarea class="form-input" type="text" id="readme-update"></textarea>
    </div>
    <div class="form-group display-flex justify-center">
      <button class="btn btn-primary update-btn" type="submit" id="{{id}}">Update</button>
    </div>
  </form>
  <div id="update-msg"></div>
</section>
<section class="row relations justify-space-around col-5">
  <section id="follower-sect m-3">
    <h5 class="display-flex justify-center">Followers</h5>
    {{#each followers as |user|}}
    <a href="/profile/{{id}}" class="followers m-3 p-1">
      <p><img src="{{profile_pic}}" alt="profile-pic" class="profile-pic" />{{username}}</p>
    </a>
    {{/each}}
  </section>
  <section id="following-sect m-3">
    <h5 class="display-flex justify-center">Following</h5>
    {{#each following as |user|}}
      <a href="/profile/{{id}}" class="followers m-3 p-1">
        <p><img src="{{profile_pic}}" alt="profile-pic" class="profile-pic" />{{username}}</p>
      </a>
    {{/each}}
  </section>
</section>

<script src="/js/update.js"></script>