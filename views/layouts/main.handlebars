  <link rel="stylesheet" href="/css/quiz.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="icon" href="/assets/apple-icon-180x180.png" />
  <title>Tek Tok</title>
</head>

<body id="bottom">
  <div class="justify-space-between">
    <header class="row p-2">

      <div class="col-3 animate__animated animate__fadeInRightBig">
        <object id="svg1" data="/assets/tektokyellowtext.svg" type="image/svg+xml" width="100" height="100"></object>
      </div>

      <nav class="display-flex col-8 align-items-center justify-content-end">
        <div>
          <ul  class="row justify-content-between nav-list">
            <li class="col-1 nav-item animate__animated animate__fadeInRightBig">
              <a id="homenav" href="/" class="a">Home</a>
            </li>
            <li class="col-3 nav-item animate__animated animate__fadeInRightBig">
              <a id="homenav" href="/resources" class="a">Resources</a>
            </li>
            <li class="col-1 nav-item animate__animated animate__fadeInRightBig">
              <a id="homenav" href="/games" class="a">Games</a>
            </li>
            <li class="col-2 mx-3 nav-item animate__animated animate__fadeInRightBig">
              <a id="homenav" href="/profile" class="a">Profile</a>
            </li>

            {{#if logged_in}}
            <li class="col-1 animate__animated animate__fadeInRightBig">
              <button class="no-button" id="logout">Logout</button>
            </li>
            {{else}}
            <!-- else -->
            <li class="col-1 animate__animated animate__fadeInRightBig">
              <a id="homenav" href="/login" class="a">Login</a>
            </li>
            {{/if}}
            <!-- end if -->
          </ul>
        </div>
      </nav>
    </header>

    <main class="justify-space-between row">
      {{{body}}}
    </main>
    <footer id="bottom" class="footer display-flex justify-space-between align-center">
      <div class="container">
        <div class="col">
          <nav>
            <aside id="label" class="col-3">
              <h4 class="label">Learn</h4>
              <a href="https://www.w3schools.com/css/default.asp" target="_blank" class="a footer-a">CSS</a>
              <br />
              <a href="https://www.w3schools.com/html/" target="_blank" class="a footer-a">HTML</a>
              <br />
              <a href="https://www.w3schools.com/js/default.asp" target="_blank" class="a footer-a">Javascript</a>
              <br />
              <a href="https://react.dev/" target="_blank" class="a footer-a">React</a>
            </aside>
            <aside id="label" class="col-3">
              <h4 class="label">About Tek Tok</h4>
              <a href="/aboutus" class="a footer-a">Back Story</a>
              <br />
              <a href="/comingsoon" class="a footer-a">Hiring</a>
              <br />
              <a href="/comingsoon" class="a footer-a">Engagemnt</a>
            </aside>
            <aside id="label" class="col-3">
              <h4 class="label">Partner With Us</h4>
              <a href="/comingsoon" class="a footer-a">Partners</a>
              <br />
              <a href="/comingsoon" class="a footer-a">Branding Guidelines</a>
              <br />
              <a href="/comingsoon" class="a footer-a">Explore Internships</a>
              <br />
              <a href="/comingsoon" class="a footer-a">Testimonials</a>              
            </aside>
            <aside id="label" class="col-3">
              <img class="footerlogo" src="/assets/4.png" alt="logo" style="height: 100px; width:100px">
            </aside>
          </nav>
        </div>
      </div>
    </footer>
  </div>
  {{#if logged_in}}
  <script type="text/javascript" src="/js/logout.js"></script>
  {{/if}}
</body>

</html>